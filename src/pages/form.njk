{% extends "templates/_form.njk" %}
{% block content %}
<h1 class="h1">Test h1</h1>

<form class="form">
    <label class="form__label--textbox">
        Enter your name
        <input type='text' name='example-text' class="form__input--textbox" />
    </label>

    <label class="form__label--textbox">
        Enter your date of birth
        <span class="form__label--helper">Helper text</span>
        <input type='text' name='example-dob' class="form__input--textbox" />
    </label>

    <fieldset>
        <legend class="form__legend">Are you amazing?</legend>

        <div>
            <label class="form__label--radio">
                <input type='radio' name='areAmazing' value='yes' class="form__input--radio" />
                <span>Yes</span>
            </label>
        </div>

        <div>
            <label class="form__label--radio">
                <input type='radio' name='areAmazing' value='no' class="form__input--radio" />
                <span>No</span>
            </label>
        </div>
    </fieldset>

    <fieldset>
        <legend class="form__legend">What level of amazing do you identify as?</legend>

        <div>
            <label class="form__label--checkbox">
                <input type='checkbox' name='levelOfAmazing' value='poor' class="form__input--checkbox" />
                <span>Poor</span>
            </label>
        </div>

        <div>
            <label class="form__label--checkbox">
                <input type='checkbox' name='levelOfAmazing' value='good' class="form__input--checkbox" />
                <span>Good</span>
            </label>
        </div>

        <div>
            <label class="form__label--checkbox">
                <input type='checkbox' name='levelOfAmazing' value='reallyGood' class="form__input--checkbox" />
                <span>Really good</span>
            </label>
        </div>

        <div>
            <label class="form__label--checkbox">
                <input type='checkbox' name='levelOfAmazing' value='reallyReallyGood' class="form__input--checkbox" />
                <span>Really really good</span>
            </label>
        </div>
    </fieldset>

    <button type="submit" class="button__primary--nextstep">
        Submit form
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 477.175 477.175">
            <path d="M360.731,229.075l-225.1-225.1c-5.3-5.3-13.8-5.3-19.1,0s-5.3,13.8,0,19.1l215.5,215.5l-215.5,215.5c-5.3,5.3-5.3,13.8,0,19.1c2.6,2.6,6.1,4,9.5,4c3.4,0,6.9-1.3,9.5-4l225.1-225.1C365.931,242.875,365.931,234.275,360.731,229.075z" />
        </svg>
    </button>
</form>
{% endblock %}